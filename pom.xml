    <!--
        Site / Reporting
    -->
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.8.0</version>
                <configuration>
                    <show>public</show>
                    <excludePackageNames>se.natusoft.tools.fileeditor.internal*</excludePackageNames>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <!--
        Profiles
    -->
    <profiles>
        <!--
        This cannot be uses since CodeLicenseManager uses this!
        -->

        <profile>
            <id>html-docs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>se.natusoft.tools.doc.markdowndoc</groupId>
                        <artifactId>markdowndoc-maven-plugin</artifactId>
                        <version>3.0.1</version>

                        <dependencies>
                            <dependency>
                                <groupId>se.natusoft.tools.doc.markdowndoc</groupId>
                                <artifactId>markdown-doc-lib</artifactId>
                                <version>3.0.1</version>

                            </dependency>
                        </dependencies>

                        <executions>
                            <execution>
                                <id>generate-html-docs</id>
                                <goals>
                                    <goal>doc</goal>
                                </goals>
                                <phase>install</phase>
                                <configuration>

                                    <generatorOptions>
                                        <generator>html</generator>
                                        <inputPaths>
                                            docs/FileEditor.md,
                                            docs/parts/H1Licenses.mdpart,
                                            docs/licenses.md,
                                            docs/parts/H1LicenseTexts.mdpart,
                                            docs/.*-.*.md
                                        </inputPaths>
                                    </generatorOptions>

                                    <htmlGeneratorOptions>
                                        <resultFile>docs/FileEditor.html</resultFile>
                                        <inlineCSS>false</inlineCSS>
                                        <css>doc.css</css>
                                    </htmlGeneratorOptions>

                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
